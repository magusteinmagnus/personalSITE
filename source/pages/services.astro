---
// src/pages/services.astro
import Layout from '../layouts/Layout.astro';

const services = [
  { title: "Math Tutoring", desc: "1-on-1 tutoring for high school or university math." },
  { title: "Web Development", desc: "Design and build responsive sites using Astro, Tailwind." },
  { title: "Animation Services", desc: "2D/3D animation and storyboards using Blender." }
];
---

<Layout title="Services">
  <section class="space-y-6">
    <h1 class="text-4xl font-bold">Services</h1>
    <div class="grid md:grid-cols-2 gap-6">
      {services.map(service => (
        <div class="p-6 border rounded-lg bg-white dark:bg-gray-800 shadow hover:bg-purple-100 dark:hover:bg-gray-700 transition">
          <h2 class="text-2xl font-semibold">{service.title}</h2>
          <p class="text-gray-600 dark:text-gray-300 mt-2">{service.desc}</p>
        </div>
      ))}
    </div>
  </section>
</Layout>
