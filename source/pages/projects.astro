/* FILE: src/pages/contact.astro */
---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact Me">
  <h1 class="text-3xl font-bold mb-6">Get in Touch</h1>
  <form action="https://formspree.io/f/maguscontact" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Your Name" required class="w-full p-2 rounded bg-gray-700" />
    <input type="email" name="email" placeholder="Your Email" required class="w-full p-2 rounded bg-gray-700" />
    <textarea name="message" placeholder="Your Message" required class="w-full p-2 rounded bg-gray-700 h-40"></textarea>
    <button type="submit" class="bg-purple-600 px-4 py-2 rounded text-white hover:bg-purple-500">Send</button>
  </form>
</Layout>
